int main()
{
	int fac(int n);
	int i;
	for (i = 1; i <= 5; i++)
	{
		printf("%d != %d\n", i, fac(i));
	}
	return 0;
}
int fac(int n)
{
	static int f = 1;//只初始化一遍 后边再调用函数时不执行

	f = f * n;
	return f;
}

#include <stdio.h>
#include <stdbool.h>
#include <stdlib.h>
#include <time.h>
